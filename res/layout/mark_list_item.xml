<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation = "horizontal" 
  android:layout_margin="10dp"
  android:gravity="center_vertical"
  >
  <LinearLayout   android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:orientation="vertical" 
  android:layout_alignParentLeft="true"
  >
  <TextView android:id="@+id/book_name" android:textSize="24dp" android:text="BookName"></TextView>
  <TextView android:id="@+id/book_progress" android:textSize="20dp" android:text="30%"></TextView>
  </LinearLayout>
  <Button android:id="@+id/delete_marked" android:text="删除" android:layout_alignParentRight="true"></Button>
</RelativeLayout>
